<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProceedToCounter">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#002C7F">
        <!-- Header -->
        <TextView
            android:id="@+id/queueStatusHeader"
            android:layout_width="wrap_content"
            android:layout_height="91dp"
            android:layout_gravity="center_horizontal"
            android:text="QUEUE STATUS"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!-- User Icon -->
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="100dp"
            android:layout_height="205dp"
            android:layout_below="@id/queue_status_text"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_1" />
        <!-- Status Text -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT'S YOUR TURN!"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal" />
        <!-- Ticket Number -->
        <TextView
            android:id="@+id/ticketNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A024"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />
        <!-- Counter Information -->
        <TextView
            android:id="@+id/counterInfo"
            android:layout_width="wrap_content"
            android:layout_height="103dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="PROCEED TO COUNTER: 3"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
        <!-- Feedback Button -->
        <Button
            android:id="@+id/feedbackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GIVE US YOUR FEEDBACK"
            android:backgroundTint="#FFFFFF"
            android:textColor="#0A4B82"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>